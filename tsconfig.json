{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["es2020", "DOM"],
      "outDir": "./dist",
      "rootDir": "agent",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true
    },
    "include": ["agent/**/*"],
    "exclude": ["node_modules", "**/*.test.ts"]
  }